{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*", 
    "src/User/user.service.ts", "src/User/user.controller.ts", "src/User/user.router.ts"  ],
  "exclude": [
    "node_modules"
  ]
}